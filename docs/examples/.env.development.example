# Example Environment Configuration - Development
# Copy this file to .env for local development

# ============================================
# Project Configuration
# ============================================
PROJECT_NAME=axiomcore
ENVIRONMENT=development
VERSION=latest

# ============================================
# Network Configuration
# ============================================
BASE_DOMAIN=localhost
ADMIN_EMAIL=dev@localhost

# DNS Provider: Not needed for local development
DNS_PROVIDER=local

# SSL/TLS: Disabled for local development
ENABLE_SSL=false

# ============================================
# Cloud Provider Configuration
# ============================================
CLOUD_PROVIDER=local

# ============================================
# Container Registry
# ============================================
CONTAINER_REGISTRY=local

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
LOG_LEVEL=debug

# API Configuration
API_PORT=8080
API_RATE_LIMIT_ENABLED=false
API_RATE_LIMIT_RPM=1000

# Authentication
AUTH_METHOD=jwt
JWT_SECRET=dev-secret-change-in-production
JWT_EXPIRY=24h

# ============================================
# Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=axiomcore_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL_MODE=disable
DB_POOL_SIZE=5

# ============================================
# Cache Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false

# ============================================
# Storage Configuration
# ============================================
STORAGE_TYPE=local
STORAGE_PATH=./data

# ============================================
# Monitoring Configuration
# ============================================
METRICS_ENABLED=true
TELEMETRY_ENABLED=true
METRICS_COLLECTION_INTERVAL=30s

# Prometheus Configuration
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=7d

# Grafana Configuration
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Loki Configuration
LOKI_PORT=3100
LOG_RETENTION_DAYS=7

# ============================================
# Alerting Configuration
# ============================================
ALERTS_ENABLED=true
AUTO_REDEPLOY_ENABLED=false

# ============================================
# Security Configuration
# ============================================
RBAC_ENABLED=true
DEFAULT_ROLE=admin

NETWORK_POLICIES_ENABLED=false
POD_SECURITY_POLICIES_ENABLED=false
SECRETS_ENCRYPTION_ENABLED=false
IMAGE_SCANNING_ENABLED=false

# ============================================
# ML/AI Configuration
# ============================================
ML_ENABLED=true
ML_FRAMEWORK=tensorflow
ML_RUNTIME=cpu
ML_MODEL_REGISTRY=./models

ML_ACCURACY_THRESHOLD=0.80
ML_LATENCY_THRESHOLD_MS=200

# ============================================
# IoT Configuration
# ============================================
IOT_ENABLED=true
IOT_PROTOCOL=mqtt
IOT_PORT=1883

MAX_DEVICES=100
DEVICE_HEARTBEAT_INTERVAL=60s
DEVICE_TIMEOUT=300s

# ============================================
# Backup Configuration
# ============================================
BACKUP_ENABLED=false

# ============================================
# Scaling Configuration
# ============================================
HPA_ENABLED=false
HPA_MIN_REPLICAS=1
HPA_MAX_REPLICAS=3

VPA_ENABLED=false

# ============================================
# Feature Flags
# ============================================
FEATURE_NEW_DASHBOARD=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_BETA_API=true

# ============================================
# Development/Debug Configuration
# ============================================
DEBUG_MODE=true
VERBOSE_LOGGING=true
PROFILING_ENABLED=false
HOT_RELOAD=true

# ============================================
# Compliance & Audit
# ============================================
AUDIT_LOGGING_ENABLED=false
COMPLIANCE_MODE=permissive
