# Example Environment Configuration - Production
# Copy this file to .env and customize for your environment

# ============================================
# Project Configuration
# ============================================
PROJECT_NAME=axiomcore
ENVIRONMENT=production
VERSION=v1.0.0

# ============================================
# Network Configuration
# ============================================
BASE_DOMAIN=example.com
ADMIN_EMAIL=admin@example.com

# DNS Provider: aws, gcp, azure
DNS_PROVIDER=gcp

# Enable SSL/TLS
ENABLE_SSL=true
SSL_ISSUER=letsencrypt-prod

# ============================================
# Cloud Provider Configuration
# ============================================
# Provider: aws, gcp, azure, cloudrun, local
CLOUD_PROVIDER=gcp

# AWS Configuration (if using AWS)
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# GCP Configuration (if using GCP)
GCP_PROJECT_ID=my-project-id
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# Azure Configuration (if using Azure)
AZURE_SUBSCRIPTION_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
AZURE_RESOURCE_GROUP=axiomcore-rg
AZURE_LOCATION=eastus

# ============================================
# Container Registry
# ============================================
# AWS: <account-id>.dkr.ecr.<region>.amazonaws.com
# GCP: gcr.io/<project-id> or <region>-docker.pkg.dev/<project-id>/<repository>
# Azure: <registry-name>.azurecr.io
CONTAINER_REGISTRY=gcr.io/my-project-id

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production
LOG_LEVEL=info

# API Configuration
API_PORT=8080
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_RPM=100

# Authentication
AUTH_METHOD=jwt
JWT_SECRET=change-this-to-a-secure-secret
JWT_EXPIRY=24h

# ============================================
# Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=axiomcore
DB_USER=axiomcore_user
DB_PASSWORD=change-this-password
DB_SSL_MODE=require
DB_POOL_SIZE=20

# ============================================
# Cache Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change-this-password
REDIS_DB=0
REDIS_TLS=true

# ============================================
# Storage Configuration
# ============================================
# AWS: s3
# GCP: gcs
# Azure: azure-blob
STORAGE_TYPE=gcs
STORAGE_BUCKET=axiomcore-production-data

# ============================================
# Monitoring Configuration
# ============================================
METRICS_ENABLED=true
TELEMETRY_ENABLED=true
METRICS_COLLECTION_INTERVAL=60s

# Prometheus Configuration
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=15d

# Grafana Configuration
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-this-password

# Loki Configuration
LOKI_PORT=3100
LOG_RETENTION_DAYS=30

# ============================================
# Alerting Configuration
# ============================================
ALERTS_ENABLED=true
AUTO_REDEPLOY_ENABLED=true

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#alerts

# PagerDuty Integration (optional)
PAGERDUTY_INTEGRATION_KEY=your-integration-key

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@example.com
SMTP_PASSWORD=change-this-password
ALERT_EMAIL=team@example.com

# ============================================
# Security Configuration
# ============================================
# RBAC
RBAC_ENABLED=true
DEFAULT_ROLE=readonly

# Network Policies
NETWORK_POLICIES_ENABLED=true

# Pod Security
POD_SECURITY_POLICIES_ENABLED=true
FORCE_NON_ROOT=true
READ_ONLY_ROOT_FS=false

# Secrets Management
SECRETS_ENCRYPTION_ENABLED=true

# Container Security Scanning
IMAGE_SCANNING_ENABLED=true
VULNERABILITY_SEVERITY_THRESHOLD=HIGH

# ============================================
# ML/AI Configuration
# ============================================
ML_ENABLED=true
ML_FRAMEWORK=tensorflow
ML_RUNTIME=cpu
ML_MODEL_REGISTRY=gs://axiomcore-models

# Model Performance
ML_ACCURACY_THRESHOLD=0.85
ML_LATENCY_THRESHOLD_MS=100

# ============================================
# IoT Configuration
# ============================================
IOT_ENABLED=true
IOT_PROTOCOL=mqtt
IOT_PORT=1883
IOT_TLS_PORT=8883

# Device Management
MAX_DEVICES=10000
DEVICE_HEARTBEAT_INTERVAL=60s
DEVICE_TIMEOUT=300s

# ============================================
# Backup Configuration
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_BUCKET=axiomcore-production-backups

# ============================================
# Scaling Configuration
# ============================================
# Horizontal Pod Autoscaling
HPA_ENABLED=true
HPA_MIN_REPLICAS=3
HPA_MAX_REPLICAS=10
HPA_CPU_THRESHOLD=70
HPA_MEMORY_THRESHOLD=80

# Vertical Pod Autoscaling
VPA_ENABLED=false

# ============================================
# Feature Flags
# ============================================
FEATURE_NEW_DASHBOARD=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_BETA_API=false

# ============================================
# Development/Debug Configuration
# ============================================
DEBUG_MODE=false
VERBOSE_LOGGING=false
PROFILING_ENABLED=false

# ============================================
# Compliance & Audit
# ============================================
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365
COMPLIANCE_MODE=strict
DATA_RESIDENCY=us

# GDPR Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=90

# ============================================
# Custom Configuration
# ============================================
# Add any custom environment variables below
CUSTOM_VAR_1=value1
CUSTOM_VAR_2=value2
